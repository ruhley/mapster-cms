<div class='form-group'>
    <label for='media' class='control-label col-sm-4'>Media</label>

    <div class='col-sm-8'>
      <select class="form-controler">
        {{#each media.content.content key="@index" as |media|}}
          <option value="{{media.id}}"  selected={{is-equal item selectedValue}}>{{media.name}}</option>
        {{/each}}
      </select>
    </div>
</div>
