<h2 class='well'>{{model.item.name}}</h2>
<form class='form-horizontal' role='form'>
    <div class='form-group'>
        <label for='name' class='control-label col-sm-4'>Name</label>

        <div class='col-sm-8'>
            {{input type='text' id='name' class='form-control' value=model.item.name}}
        </div>
    </div>

    <div class='form-group'>
        <label for='abbreviation' class='control-label col-sm-4'>Abbreviation</label>

        <div class='col-sm-8'>
            {{input type='text' id='abbreviation' class='form-control' value=model.item.abbreviation}}
        </div>
    </div>

    <div class='form-group'>
        <label for='description' class='control-label col-sm-4'>Description</label>

        <div class='col-sm-8'>
            {{textarea type='text' id='description' class='form-control' rows='10' value=model.item.description}}
        </div>
    </div>

    <div class='form-group'>
        <label for='link' class='control-label col-sm-4'>Link</label>

        <div class='col-sm-8'>
            {{input type='text' id='link' class='form-control' value=model.item.link}}
        </div>
    </div>

    <button class='btn btn-success pull-right' {{action 'createVersion'}}>Create Version</button>
</form>

<h3>Versions</h3>

{{#if model.versions}}
    <table id='version-list'>
        <thead>
            <tr>
                <th>Name</th>
                <th>Abbreviation</th>
                <th>Description</th>
                <th>Image</th>
                <th>Link</th>
            </tr>
        </thead>
        <tbody>
            {{#each item in model.versions}}
                <tr>
                    <td>{{#link-to 'entity.info' model.entity.url item.id}}{{item.name}}{{/link-to}}</td>
                    <td>{{item.abbreviation}}</td>
                    <td>{{item.description}}</td>
                    <td>{{{item.imageDisplay}}}</td>
                    <td>{{{item.linkTo}}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    No versions available
{{/if}}
